{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [".env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "check:lint": {
      "dependsOn": ["^check:lint"]
    },
    "check:types": {
      "dependsOn": ["^check:types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "fix:lint": {
      "dependsOn": ["^fix:lint"]
    }
  },
  "ui": "tui"
}
